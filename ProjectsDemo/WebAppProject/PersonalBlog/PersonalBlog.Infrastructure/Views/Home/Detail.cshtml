@model PBlog.DomainEntities.Article

<div class="container-lg py-4 row">
    <div class="border rounded-3 p-4 col-11" style="font-family: 'Comic Neue', cursive; border-width: 2px; border-style: solid;">
        <div class="mb-3 text-muted small">/article/@Model.Id</div>
        <h2 class="fw-bold">@Model.Title</h2>
        <div class="text-secondary fw-semibold mb-3">
            @Model.PublishDate.ToString("MMMM d, yyyy")
        </div>

        <div style="line-height: 1.7;">
            @Html.Raw(Model.Content)
        </div>
    </div>

    <div class="mt-4 col-1">
        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back 
        </a>
    </div>
</div>