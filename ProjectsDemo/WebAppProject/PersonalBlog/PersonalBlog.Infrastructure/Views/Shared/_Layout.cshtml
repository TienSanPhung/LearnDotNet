<!DOCTYPE html><html lang="en"><head>    <meta charset="utf-8" />    <meta name="viewport" content="width=device-width, initial-scale=1.0" />    <title>@ViewData["Title"] - Personal Blog</title>    <link href="https://fonts.googleapis.com/css2?family=Comic+Neue&display=swap" rel="stylesheet">    <script type="importmap"></script>    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css"></head><body>    <header>        <nav class="navbar navbar-expand-sm navbar-toggleable-sm om mb-3">            <div class="container">                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">                    <ul class="navbar-nav flex-grow-1">                        @if (User.Identity.IsAuthenticated)                        {                            <li class="nav-item">                                <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Articles</a>                            </li>                            <li class="nav-item">                                <a class="nav-link text-dark" asp-controller="Article" asp-action="Index">Manage Articles</a>                            </li>                            <li class="nav-item">                                <a class="nav-link text-dark" asp-controller="Admin" asp-action="Index">Admin</a>                            </li>                        }                    </ul>                </div>            </div>        </nav>    </header>    <main role="main">        @RenderBody()    </main>    <footer class="border-top footer text-muted">        <div class="container">            &copy; @DateTime.Now.Year - Personal Blog        </div>    </footer>    <script src="~/lib/jquery/dist/jquery.min.js"></script>    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>    <script src="~/js/site.js" asp-append-version="true"></script>    @await RenderSectionAsync("Scripts", required: false)</body></html>