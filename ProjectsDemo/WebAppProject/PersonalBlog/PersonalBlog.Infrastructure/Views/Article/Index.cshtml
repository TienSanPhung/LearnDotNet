@model IEnumerable<PBlog.DomainEntities.Article>

<div class="container row">
    <div class="mb-2 col-3">
        <div class="d-flex justify-content-between align-items-center border rounded p-4">
            <h3 class="fw-bold m-0" style="font-family: 'Comic Neue', cursive;">Personal Blog</h3>
            <a href="@Url.Action("Add", "Article")" class="text-decoration-none fw-bold">
                + Add
            </a>
        </div>
    </div>

    <div class="border rounded p-4 col-8 " style="font-family: 'Comic Neue', cursive;">
        @foreach (var article in Model)
        {
            <div class="d-flex justify-content-between align-items-center border-bottom py-2">
                <span>@article.Title</span>
                <div>
                    <a href="@Url.Action("Edit", "Article", new { id = article.Id })" class="me-3 text-decoration-none">Edit</a>
                    <form method="post" action="@Url.Action("Delete", "Article", new { id = article.Id })" class="d-inline">
                        <button type="submit" class="btn btn-link p-0 m-0 text-decoration-none text-muted"
                                onclick="return confirm('Are you sure you want to delete this article?');">
                            Delete
                        </button>
                    </form>
                </div>
            </div>
        }
    </div>
</div>

<style>
    * {
        font-family: 'Comic Neue', cursive;
    }
</style>